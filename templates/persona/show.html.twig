{% extends 'base.html.twig' %}

{% block title %}Consulta{% endblock %}

{% block encabezado %}
    Consulta
{% endblock %}

{% block main %}
   
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ persona.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ persona.Nombre }}</td>
            </tr>
            <tr>
                <th>Dni</th>
                <td>{{ persona.dni }}</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>{{ persona.sexo ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_persona_edit', {'id': persona.id}) }}">Editar</a>

    {{ include('persona/_delete_form.html.twig') }}
{% endblock %}
